:root {
  --bg-color: #1a1a1a;
  --text-color: #ffffff;
  --accent-color: #ffcc00;
  --danger-color: #ff4444;
  --success-color: #44ff44;
  --bottom-ui-height: 220px;
}

body {
  margin: 0;
  overflow: hidden;
  font-family: 'Inter', sans-serif;
  background-color: var(--bg-color);
  color: var(--text-color);
  user-select: none;
}

#app {
  position: relative;
  width: 100vw;
  height: 100vh;
}

/* Game Canvas - Reserve space at bottom for UI */
#game-canvas {
  width: 100%;
  height: calc(100vh - var(--bottom-ui-height));
  display: block;
  position: absolute;
  top: 0;
  left: 0;
}

#ui-layer {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
}

#top-bar {
  position: absolute;
  top: 20px;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  gap: 20px;
  background: rgba(0, 0, 0, 0.7);
  padding: 10px 20px;
  border-radius: 20px;
  pointer-events: auto;
  backdrop-filter: blur(5px);
}

.stat-item {
  font-size: 1.2rem;
  font-weight: bold;
  display: flex;
  align-items: center;
  gap: 10px;
}

.progress-container {
  min-width: 200px;
}

.progress-bar-bg {
  width: 150px;
  height: 10px;
  background: #444;
  border-radius: 5px;
  overflow: hidden;
  position: relative;
}

.progress-bar-fill {
  height: 100%;
  background: linear-gradient(90deg, #3b82f6, #8b5cf6);
  width: 0%;
  transition: width 0.1s linear;
}

/* Bottom Area - Fixed position, doesn't overlay canvas */
#bottom-bar {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: var(--bottom-ui-height);
  display: flex;
  flex-direction: column;
  justify-content: center;
  gap: 0;
  pointer-events: auto;
  align-items: center;
  background: linear-gradient(to bottom, transparent 0%, rgba(0, 0, 0, 0.3) 30%, rgba(0, 0, 0, 0.7) 100%);
  padding-bottom: 10px;
}

/* Tab Navigation */
#tab-nav {
  display: flex;
  gap: 10px;
  margin-bottom: 10px;
}

.tab-btn {
  background: rgba(0, 0, 0, 0.6);
  color: #aaa;
  border: 1px solid #444;
  padding: 8px 20px;
  border-radius: 20px;
  cursor: pointer;
  font-weight: 600;
  transition: all 0.2s;
  backdrop-filter: blur(5px);
}

.tab-btn:hover {
  background: rgba(0, 0, 0, 0.8);
  color: white;
}

.tab-btn.active {
  background: var(--accent-color);
  color: black;
  border-color: var(--accent-color);
  box-shadow: 0 0 10px rgba(255, 204, 0, 0.4);
}

/* Tab Content */
#tab-content {
  width: 100%;
  display: flex;
  justify-content: center;
  flex: 1;
}

.tab-pane {
  display: none;
  width: 100%;
  justify-content: center;
}

.tab-pane.active {
  display: flex;
}

/* Build Menu (Reused for tabs) */
.build-menu {
  display: flex;
  gap: 10px;
  background: rgba(0, 0, 0, 0.7);
  padding: 10px;
  border-radius: 10px;
  backdrop-filter: blur(5px);
  overflow-x: auto;
  max-width: 90vw;
}

/* Policies List */
#policies-list {
  display: flex;
  gap: 15px;
  background: rgba(0, 0, 0, 0.7);
  padding: 15px;
  border-radius: 10px;
  backdrop-filter: blur(5px);
  overflow-x: auto;
  max-width: 90vw;
}

.policy-item {
  background: linear-gradient(135deg, #2a2a2a 0%, #222 100%);
  border: 1px solid #444;
  border-radius: 8px;
  padding: 15px;
  width: 220px;
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  gap: 10px;
  transition: all 0.3s;
}

.policy-item.active {
  border-color: var(--success-color);
  box-shadow: 0 0 15px rgba(68, 255, 68, 0.2);
}

.policy-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #444;
  padding-bottom: 8px;
}

.policy-name {
  font-weight: bold;
  color: var(--accent-color);
  font-size: 0.9rem;
}

.policy-cost {
  font-size: 0.8rem;
  color: #aaa;
}

.policy-desc {
  font-size: 0.8rem;
  color: #ccc;
  line-height: 1.4;
  flex-grow: 1;
}

.policy-btn {
  background: #333;
  color: white;
  border: none;
  padding: 8px;
  border-radius: 4px;
  cursor: pointer;
  font-weight: bold;
  transition: all 0.2s;
}

.policy-btn:hover {
  background: #444;
}

.policy-btn.active {
  background: var(--success-color);
  color: black;
  cursor: default;
}

.policy-btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.build-btn {
  background: linear-gradient(135deg, #333 0%, #2a2a2a 100%);
  color: white;
  border: 2px solid #555;
  padding: 12px;
  border-radius: 8px;
  cursor: pointer;
  transition: all 0.3s ease;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 5px;
  min-width: 90px;
  position: relative;
  overflow: hidden;
}

.build-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
  transition: left 0.5s;
}

.build-btn:hover::before {
  left: 100%;
}

.build-btn:hover {
  background: linear-gradient(135deg, #444 0%, #383838 100%);
  transform: translateY(-3px);
  box-shadow: 0 5px 15px rgba(255, 204, 0, 0.3);
  border-color: var(--accent-color);
}

.build-btn.active {
  background: linear-gradient(135deg, var(--accent-color) 0%, #e6b800 100%);
  color: black;
  border-color: var(--accent-color);
  box-shadow: 0 0 20px rgba(255, 204, 0, 0.6);
}

.btn-icon {
  font-size: 2rem;
  filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.5));
}

.btn-label {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 2px;
}

.btn-name {
  font-size: 0.85rem;
  font-weight: 600;
  letter-spacing: 0.5px;
}

.btn-price {
  font-size: 0.75rem;
  color: #ffcc00;
  font-weight: bold;
}

.build-btn.active .btn-price {
  color: #000;
}

#build-row {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12px;
  width: 100%;
}


#delete-mode-btn {
  background: linear-gradient(135deg, var(--danger-color) 0%, #cc3333 100%);
  color: white;
  border: 2px solid rgba(255, 68, 68, 0.5);
  padding: 12px 24px;
  border-radius: 10px;
  cursor: pointer;
  font-weight: 700;
  transition: all 0.3s ease;
  min-width: 160px;
  max-width: 200px;
  box-shadow: 0 4px 15px rgba(255, 68, 68, 0.3);
}

.sell-mode-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10px;
  font-size: 1rem;
}

#delete-mode-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 5px 15px rgba(255, 68, 68, 0.4);
}

#delete-mode-btn.active {
  box-shadow: 0 0 20px var(--danger-color);
  animation: pulse 1.5s infinite;
}

@keyframes pulse {

  0%,
  100% {
    transform: scale(1);
  }

  50% {
    transform: scale(1.05);
  }
}

/* Icon Toggles */
.icon-toggle {
  background: none;
  border: none;
  font-size: 1.5rem;
  cursor: pointer;
  opacity: 0.4;
  transition: opacity 0.2s, transform 0.1s;
  filter: grayscale(100%);
  margin-left: 10px;
}

.icon-toggle.active {
  opacity: 1;
  filter: grayscale(0%);
}

/* Event Modal */
#event-modal {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  justify-content: center;
  align-items: center;
  pointer-events: auto;
  z-index: 100;
}

.modal-content {
  background: #222;
  padding: 40px;
  border-radius: 10px;
}

/* Unit Info Panel */
#unit-info-panel {
  position: absolute;
  top: 80px;
  right: 20px;
  width: 280px;
  max-height: calc(100vh - 100px);
  overflow-y: auto;
  background: rgba(0, 0, 0, 0.85);
  backdrop-filter: blur(10px);
  border: 2px solid #555;
  border-radius: 12px;
  padding: 20px;
  color: white;
  pointer-events: auto;
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.6);
  transition: all 0.3s ease-in-out;
}

.unit-header {
  display: flex;
  align-items: center;
  gap: 12px;
  margin-bottom: 15px;
  border-bottom: 2px solid #444;
  padding-bottom: 12px;
}

#unit-icon {
  font-size: 2.5rem;
  filter: drop-shadow(0 2px 6px rgba(255, 204, 0, 0.3));
}

#unit-name {
  font-size: 1.3rem;
  font-weight: bold;
  color: var(--accent-color);
}

#unit-desc {
  font-size: 0.85rem;
  color: #ccc;
  margin-bottom: 12px;
  line-height: 1.4;
  font-style: italic;
  background: rgba(255, 255, 255, 0.05);
  padding: 8px;
  border-radius: 6px;
  border-left: 3px solid var(--accent-color);
}

#unit-stats {
  font-size: 0.85rem;
  display: flex;
  flex-direction: column;
  gap: 6px;
}

.stat-row {
  display: flex;
  justify-content: space-between;
  padding: 5px 6px;
  background: rgba(255, 255, 255, 0.03);
  border-radius: 4px;
}

.stat-label {
  color: #aaa;
  font-size: 0.8rem;
}

.stat-value {
  font-weight: bold;
  color: var(--accent-color);
  font-size: 0.85rem;
}

/* Purchase Preview Panel */
#purchase-preview-panel {
  position: absolute;
  bottom: 100%;
  /* Place it right above the bottom bar */
  left: 50%;
  transform: translateX(-50%);
  /* Center horizontally */
  width: 560px;
  max-width: 90vw;
  background: rgba(0, 0, 0, 0.9);
  backdrop-filter: blur(15px);
  border: 2px solid var(--accent-color);
  border-radius: 12px 12px 0 0;
  padding: 14px 18px;
  color: white;
  pointer-events: none;
  box-shadow: 0 -5px 20px rgba(255, 204, 0, 0.3);
  transition: all 0.3s ease-in-out;
  margin-bottom: 10px;
  z-index: 10;
  /* Ensure it's above other elements */
}

#purchase-preview-panel.hidden {
  opacity: 0;
  transform: translateX(-50%) translateY(20px);
  /* Keep centered while animating down */
  pointer-events: none;
}

.preview-header {
  display: flex;
  align-items: center;
  gap: 12px;
  margin-bottom: 8px;
  padding-bottom: 8px;
  border-bottom: 2px solid var(--accent-color);
}

#preview-icon {
  font-size: 2rem;
  filter: drop-shadow(0 4px 8px rgba(255, 204, 0, 0.5));
}

#preview-name {
  font-size: 1.2rem;
  font-weight: bold;
  color: var(--accent-color);
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
  flex: 1;
}

.cost-value {
  font-size: 1.3rem;
  font-weight: bold;
  color: var(--accent-color);
  text-shadow: 0 2px 8px rgba(255, 204, 0, 0.5);
}

#preview-desc {
  font-size: 0.85rem;
  color: #ddd;
  margin-bottom: 8px;
  line-height: 1.4;
  font-style: italic;
  background: linear-gradient(135deg, rgba(255, 204, 0, 0.1) 0%, rgba(255, 204, 0, 0.05) 100%);
  padding: 8px 10px;
  border-radius: 6px;
  border-left: 3px solid var(--accent-color);
}

.preview-section {
  margin-bottom: 6px;
}

.section-title {
  font-size: 0.7rem;
  color: #aaa;
  font-weight: 600;
  margin-bottom: 4px;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

#preview-stats {
  font-size: 0.8rem;
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
  gap: 4px;
}

#preview-hint {
  text-align: center;
  font-size: 0.7rem;
  color: #888;
  margin-top: 6px;
  padding: 4px;
  background: rgba(255, 204, 0, 0.1);
  border-radius: 4px;
  font-style: italic;
}

/* Policy Info Panel (Same pattern as Purchase Preview) */
#policy-info-panel {
  position: absolute;
  bottom: 100%;
  /* Place it right above the bottom bar */
  left: 50%;
  transform: translateX(-50%);
  /* Center horizontally */
  width: 560px;
  max-width: 90vw;
  background: rgba(0, 0, 0, 0.9);
  backdrop-filter: blur(15px);
  border: 2px solid var(--accent-color);
  border-radius: 12px 12px 0 0;
  padding: 14px 18px;
  color: white;
  pointer-events: auto;
  box-shadow: 0 -5px 20px rgba(255, 204, 0, 0.3);
  transition: all 0.3s ease-in-out;
  margin-bottom: 10px;
  z-index: 55;
  /* Higher than purchase preview */
}

#policy-info-panel.hidden {
  opacity: 0;
  transform: translateX(-50%) translateY(20px);
  /* Keep centered while animating down */
  pointer-events: none;
}

.policy-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8px;
  margin-bottom: 15px;
  border-bottom: 2px solid #444;
  padding-bottom: 12px;
}

#policy-icon {
  font-size: 3rem;
  filter: drop-shadow(0 2px 6px rgba(255, 204, 0, 0.3));
}

#policy-name {
  font-size: 1.3rem;
  font-weight: bold;
  color: var(--accent-color);
  text-align: center;
}

.policy-level-badge {
  background: #333;
  padding: 4px 10px;
  border-radius: 12px;
  font-size: 0.8rem;
  color: #aaa;
  border: 1px solid #555;
}

#policy-desc {
  font-size: 0.9rem;
  color: #ccc;
  margin-bottom: 15px;
  line-height: 1.5;
  text-align: center;
  font-style: italic;
}

#policy-stats {
  margin-bottom: 20px;
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.policy-upgrade-button {
  width: 100%;
  padding: 12px;
  background: linear-gradient(135deg, var(--accent-color) 0%, #e6b800 100%);
  color: black;
  border: none;
  border-radius: 8px;
  font-weight: bold;
  font-size: 1rem;
  cursor: pointer;
  transition: transform 0.2s, box-shadow 0.2s;
}

.policy-upgrade-button:hover:not(:disabled) {
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(255, 204, 0, 0.4);
}

.policy-upgrade-button:disabled {
  background: #444;
  color: #888;
  cursor: not-allowed;
  transform: none;
  box-shadow: none;
}

/* Policy Button Styles */
.policy-btn-item.active-policy {
  border-color: var(--success-color);
  box-shadow: 0 0 10px rgba(68, 255, 68, 0.3);
}

.policy-btn-item.active-policy .btn-name {
  color: var(--success-color);
}

.policy-btn-item.selected {
  background: linear-gradient(135deg, #444 0%, #383838 100%);
  border-color: white;
  transform: translateY(-3px);
}

.btn-level {
  font-size: 0.7rem;
  color: #aaa;
  margin-top: 2px;
}

/* Controls Row */
.controls-row {
  display: flex;
  gap: 10px;
  align-items: center;
}

/* ========================================
   MOBILE OPTIMIZATIONS
   ======================================== */

/* Panel Backdrop for mobile */
.panel-backdrop {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 49;
  display: none;
  pointer-events: auto;
}

.panel-backdrop.active {
  display: block;
}

/* Tablet and below */
@media (max-width: 768px) {
  :root {
    --bottom-ui-height: 240px;
  }

  /* Unit Info Panel - Bottom Sheet Style */
  #unit-info-panel {
    position: fixed !important;
    bottom: 0 !important;
    left: 0 !important;
    right: 0 !important;
    top: auto !important;
    width: 100% !important;
    max-width: 100% !important;
    max-height: 60vh;
    border-radius: 16px 16px 0 0 !important;
    border: none !important;
    border-top: 2px solid var(--accent-color) !important;
    transform: translateY(100%);
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    z-index: 51;
  }

  #unit-info-panel:not(.hidden) {
    transform: translateY(0);
  }

  /* Add swipe indicator */
  #unit-info-panel::before {
    content: '';
    position: absolute;
    top: 8px;
    left: 50%;
    transform: translateX(-50%);
    width: 40px;
    height: 4px;
    background: #666;
    border-radius: 2px;
  }

  /* Top bar - more compact */
  #top-bar {
    gap: 10px;
    padding: 8px 12px;
    flex-wrap: wrap;
  }

  .stat-item {
    font-size: 1rem;
    gap: 6px;
  }

  .progress-container {
    min-width: 150px;
  }

  .progress-bar-bg {
    width: 100px;
  }

  #build-row {
    flex-direction: column;
    align-items: center;
  }

  #delete-mode-btn {
    width: 100%;
    min-width: auto;
  }

  /* Bottom bar adjustments */
  .build-menu {
    max-width: 95vw;
    padding: 8px;
  }

  /* Larger touch targets */
  .build-btn {
    min-width: 80px;
    min-height: 80px;
    padding: 10px;
  }

  .tab-btn {
    min-height: 44px;
    padding: 10px 16px;
  }

  #delete-mode-btn {
    min-height: 44px;
    padding: 12px 16px;
  }

  /* Purchase preview panel */
  #purchase-preview-panel {
    width: 95vw;
    max-width: 95vw;
    padding: 12px 14px;
  }

  .preview-header {
    gap: 8px;
  }

  #preview-icon {
    font-size: 1.5rem;
  }

  #preview-name {
    font-size: 1rem;
  }
}

/* Mobile phones */
@media (max-width: 480px) {
  :root {
    --bottom-ui-height: 260px;
  }

  #top-bar {
    gap: 8px;
    padding: 6px 10px;
  }

  .stat-item {
    font-size: 0.9rem;
    gap: 4px;
  }

  .progress-container {
    min-width: 120px;
  }

  /* Tab buttons - smaller text */
  .tab-btn {
    padding: 10px;
    font-size: 0.85rem;
  }

  /* Build buttons */
  .build-menu {
    gap: 8px;
  }

  .build-btn {
    min-width: 70px;
    min-height: 70px;
  }

  .btn-icon {
    font-size: 1.5rem;
  }

  .btn-name {
    font-size: 0.75rem;
  }

  .btn-price {
    font-size: 0.7rem;
  }

  /* Policy items */
  .policy-item {
    width: 200px;
    padding: 12px;
  }

  .policy-name {
    font-size: 0.85rem;
  }

  /* Unit info panel content */
  #unit-info-panel {
    padding: 20px 16px 16px;
  }

  .unit-header {
    margin-bottom: 12px;
  }

  #unit-icon {
    font-size: 2rem;
  }

  #unit-name {
    font-size: 1.1rem;
  }
}

/* Landscape mobile */
@media (max-width: 768px) and (orientation: landscape) {
  :root {
    --bottom-ui-height: 180px;
  }

  #unit-info-panel {
    max-height: 70vh;
  }
}

.panel-backdrop.active {
  display: block;
}

/* ========================================
   COMPANY DASHBOARD
   ======================================== */

/* Company Dashboard Panel */
#company-dashboard {
  position: absolute;
  top: 80px;
  left: 20px;
  width: 320px;
  max-height: calc(100vh - 380px);
  overflow-y: auto;
  background: rgba(0, 0, 0, 0.9);
  backdrop-filter: blur(15px);
  border: 2px solid #555;
  border-radius: 12px;
  padding: 20px;
  color: white;
  pointer-events: auto;
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.6);
  transition: all 0.3s ease-in-out;
  z-index: 50;
}

#company-dashboard.hidden {
  opacity: 0;
  transform: translateX(-100%);
  pointer-events: none;
}

.dashboard-header {
  display: flex;
  align-items: center;
  gap: 12px;
  margin-bottom: 15px;
  padding-bottom: 12px;
  border-bottom: 2px solid var(--accent-color);
}

.dashboard-icon {
  font-size: 2.5rem;
  filter: drop-shadow(0 2px 6px rgba(255, 204, 0, 0.3));
}

.dashboard-title {
  font-size: 1.4rem;
  font-weight: bold;
  color: var(--accent-color);
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
}

.dashboard-section {
  margin-bottom: 15px;
  background: rgba(255, 255, 255, 0.03);
  border-radius: 8px;
  padding: 10px;
  border-left: 3px solid #444;
}

.section-header {
  font-size: 0.85rem;
  font-weight: 600;
  color: var(--accent-color);
  margin-bottom: 8px;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.dashboard-content {
  font-size: 0.85rem;
  display: flex;
  flex-direction: column;
  gap: 6px;
}

.metric-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 6px 8px;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 4px;
  transition: background 0.2s;
}

.metric-row:hover {
